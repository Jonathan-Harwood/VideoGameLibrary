<Page
    x:Class="VideoGameLibrary.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fa="using:FontAwesome.UWP"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary Source="Theme/ColourPalette.xaml"></ResourceDictionary>
    </Page.Resources>

    <Grid Background="{StaticResource Blue100Brush}">
        <Grid HorizontalAlignment="Stretch" Height="80" VerticalAlignment="Top" Background="{StaticResource Blue900Brush}">
            <fa:FontAwesome Icon="Bars" Foreground="White" FontSize="30" Margin="20,0" HorizontalAlignment="Left"></fa:FontAwesome>
        </Grid>

    </Grid>
</Page>
